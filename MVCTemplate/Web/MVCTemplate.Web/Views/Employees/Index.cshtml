
@model IEnumerable<MVCTemplate.Web.ViewModels.Employees.EmployeeViewModel>

@{
    ViewBag.Title = "Employees";
}

<div class="nav-path">
    Employees <span>(@Model.Count())</span>
    <div class="pull-right">
        <a href="@Url.Content("~/Employees/Create")" class="btn btn-primary btn-xs"><i class="fa fa-user-plus"></i> New employee</a>
    </div>
</div>

@if (Model.Count() > 0)
{
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>
                    <a href="@Url.Content("~/Employees/Info/" + employee.Id)" title="Info" class="btn btn-default btn-xs"><i class="fa fa-info"></i></a>
                    <a href="@Url.Content("~/Employees/Update/" + employee.Id)" title="Edit" class="btn btn-default btn-xs"><i class="fa fa-edit"></i></a>
                    <a href="@Url.Content("~/Employees/Delete/" + employee.Id)" title="Delete" class="btn btn-default btn-xs"><i class="fa fa-remove"></i></a>
                </td>
            </tr>
        }   
    </tbody>
</table>
}
